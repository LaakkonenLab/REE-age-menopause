###################################################################################
### Karppinen et al.                                                            ###
### Age but not menopausal status is linked to lower resting energy expenditure ###
##################################################################################


### Packages ###

library(readxl)
library(lm.beta)
library(nlme)
library(car)
library(psych)


### Data ### 

# Dat file cannot be shared publicly due to legislative reasons 

# Factors
Dat$Group <- factor(Dat$Group, levels = c(4, 7, 8, 1, 3, 2))
Dat$Age_group <- factor(Dat$Age_group, labels = c("Group I", "Group II", "Group III"), levels = c(4, 5, 1))


# Calculation of appendicular lean mass index (ALMI)
Dat$ALMI <- Dat$DXA_ALM/(Dat$Height/100)^2


### Explaining REE in the study sample ###

# Model 1: Fat-free mass (FFM) & fat mass (FM)
summary(REE_m1 <- lm(REE ~ DXA_FFM + DXA_FM, data = Dat))
confint(REE_m1)
plot(REE_m1)

# Model 2: FFM, FM and age
summary(REE_m2 <- lm(REE ~ DXA_FFM + DXA_FM + Age, data = Dat))
confint(REE_m2)
plot(REE_m2)

# Model 3: FFM, FM, age & appendicular lean mass index (ALMI)
summary(REE_m3 <- lm(REE ~ DXA_FFM + DXA_FM + Age + ALMI, data = Dat))
confint(REE_m3)
plot(REE_m3)

# Model 4: FFM, FM, age & study period
Dat$Period <- ifelse(Dat$Study == "CALEX", 1, 0)
summary(REE_m4 <- lm(REE ~ DXA_FFM + DXA_FM + Age + factor(Period), data = Dat))
plot(REE_m4)

# FFM, FM & appendicular lean mass index (ALMI) adjustted residuals for senitivity analysis
summary(REE_m_sens <- lm(REE ~ DXA_FFM + DXA_FM + ALMI, data = Dat))
plot(REE_m_sens)


### Extraction of residuals ###

# FFM & FM adjusted REE residuals
Dat$rREE_m1 <- REE_m1$residuals

# FFM, FM & ALMI adjusted REE residuals (for sensitivity analysis)
Dat$rREE_m_sens <- REE_m_sens$residuals


### Study aim I: age and REE association ###

## 1) Relationship between measured and predicted REE

# m1: FFM & FM
Dat$pREE_m1 <- predict(REE_m1, Dat)
summary(REE_pREE_1 <- lm(REE ~ pREE_m1, data = Dat))
lm.beta(REE_pREE_1)

# m2: FFM, FM & age
Dat$pREE_m2 <- predict(REE_m2, Dat)
summary(REE_pREE_2 <- lm(REE ~ pREE_m2, data = Dat))
lm.beta(REE_pREE_2)

## 2) Association between age and residual REE (FFM & FM)
summary(rREE_m1_age <- lme(rREE_m1 ~ Age, random = ~1|ID, data = Dat))
Confint(rREE_m1_age)
qqnorm(rREE_m1_age$residuals)


## 3) Association between age groups and REE in the whole sample

# Measured REE
summary(mREE_age_group <- lme(REE ~ relevel(Age_group, ref = "Group III"), random = ~1|ID, data = Dat))
Confint(mREE_age_group)
qqnorm(mREE_age_group$residuals)

# Residual REE (FFM & FM)
summary(rREE_m1_age_group <- lme(rREE_m1 ~ relevel(Age_group, ref = "Group III"), random = ~1|ID, data = Dat))
Confint(rREE_m1_age_group)
qqnorm(rREE_m1_age_group$residuals)

# Sensitivity analysis, residual REE (FFM, FM & ALMI)
summary(rREE_m_sens_age_group <- lme(rREE_m_sens ~ relevel(Age_group, ref = "Group III"), random = ~1|ID, data = Dat))
Confint(rREE_m_sens_age_group)
qqnorm(rREE_m_sens_age_group$residuals)


## 4) Association between mother-daughter status and REE & TEE

# Data (n = 16 pairs with REE measurements)
Dat_CALEX <- subset(Dat, CALEX_pair == 1)

# Residual REE
summary(CALEX_rREE_m1 <- lme(rREE_m1 ~ factor(Code), random = ~1|ID, data = Dat_CALEX))
Confint(CALEX_rREE_m1)
qqnorm(CALEX_rREE_m1$residuals)

# Intraclass correlation, REE
ICC_D <- subset(Dat_CALEX, Code == "D")
ICC_M <- subset(Dat_CALEX, Code == "A")
ICC_rREE_m1 <- data.frame(ICC_D$rREE_m1, ICC_M$rREE_m1)
ICC(ICC_rREE_m1)

# Data (n = 10 with TEE measurements)
Dat_CALEX_TEE <- subset(Dat, CALEX_pair_DLW == 1)

# Residual REE
summary(CALEX_TEE_rREE_m1 <- lme(rREE_m1 ~ factor(Code), random = ~1|ID, data = Dat_CALEX_TEE))
Confint(CALEX_TEE_rREE_m1)
qqnorm(CALEX_TEE_rREE_m1$residuals)

# TEE adjusted for FFM & FM
summary(CALEX_TEE_adjusted <- lme(TEE ~ factor(Code) + DXA_FFM + DXA_FM, random = ~1|ID, data = Dat_CALEX_TEE))
Confint(CALEX_TEE_adjusted)
qqnorm(CALEX_TEE_rREE_m1$residuals)

# TEE residuals
Dat_CALEX_TEE$rTEE <- CALEX_TEE_adjusted$residuals[,1]

# Intraclass correlation, TEE
ICC_D_TEE <- subset(Dat_CALEX_TEE, Code == "D")
ICC_M_TEE <- subset(Dat_CALEX_TEE, Code == "A")
ICC_TEE <- data.frame(ICC_D_TEE$TEE, ICC_M_TEE$TEE) # measured TEE
ICC(ICC_TEE)
ICC_rTEE <- data.frame(ICC_D_TEE$rTEE, ICC_M_TEE$rTEE) # residual TEE
ICC(ICC_rTEE)


### Study aim II: menopausal status and REE association ###

# Data
Dat_MENO <- subset(Dat, Age_group == "Group III")


## 1) Association between menopausal status and REE

# Measured REE
summary(MENO_REE <- lm(REE ~ relevel(Group, ref = "2"), data = Dat_MENO))
confint(MENO_REE)
qqnorm(MENO_REE$residuals)

# Residual REE
summary(MENO_rREE <- lm(rREE_m1 ~ relevel(Group, ref = "2"), data = Dat_MENO))
confint(MENO_rREE)
qqnorm(MENO_rREE$residuals)

# Sensitivity analysis without perimenopausal women
Dat_MENO_s <- subset(Dat_MENO, M_status == "PRE" | M_status == "POST" | M_status == "MHT")

summary(MENO_REE_s <- lm(rREE_m1 ~ relevel(Group, ref = "2"), data = Dat_MENO_s))
confint(MENO_REE_s)
qqnorm(MENO_REE_s$residuals)


## 2) Explorative analyses in the middle-aged subgroup

# Age
summary(rREE_Age <- lm(rREE_m1 ~ Age, data = Dat_MENO))
lm.beta(rREE_Age)
qqnorm(rREE_Age$residuals)

# Oestradiol (E2), ln-transformed to meet the normality assumption

summary(rREE_E2 <- lm(rREE_m1 ~ log(E2), data = Dat_MENO)) # univariable
lm.beta(rREE_E2)
qqnorm(rREE_E2$residuals)

summary(rREE_Age_E2 <- lm(rREE_m1 ~ Age + log(E2), data = Dat_MENO)) # age adjusted
lm.beta(rREE_Age_E2)
qqnorm(rREE_Age_E2$residuals)

# Follicle-stimulating hormone (FSH)

summary(rREE_FSH <- lm(rREE_m1 ~ FSH, data = Dat_MENO)) # univariable
lm.beta(rREE_FSH)
qqnorm(rREE_FSH$residuals)

summary(rREE_Age_FSH <- lm(rREE_m1 ~ Age + FSH, data = Dat_MENO)) # age adjusted
lm.beta(rREE_Age_FSH)
qqnorm(rREE_Age_FSH$residuals)

# Body fat percentage (FatP)

summary(rREE_BF <- lm(rREE_m1 ~ FatP, data = Dat_MENO)) # univariable
lm.beta(rREE_BF)
qqnorm(rREE_BF$residuals)

summary(rREE_Age_BF <- lm(rREE_m1 ~ Age + FatP, data = Dat_MENO)) # age adjusted
lm.beta(rREE_Age_BF)
qqnorm(rREE_Age_BF$residuals)
